<%- model_class = User -%>
<div class="page-header">
  <h1>Saldo actual: <%= number_to_currency @user.balance %> </h1>
</div>

<div class="container mt-4">
  <div class="row">

    <div class="col-lg-3">
      <div class="c100 p30 big">
        <span>30%</span>
        <div class="slice">
          <div class="bar"></div>
          <div class="fill"></div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @user.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:document_number) %>:</strong></dt>
        <dd><%= @user.document_number %></dd>
        <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
        <dd><%= @user.email %></dd>
      </dl>
    </div>

</div>

<h3 class="sub-header">Num Cuenta: <%= @user.account_number %></h3>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Transaccion #</th>
        <th>Tipo</th>
        <th>Fecha</th>
        <th>Valor</th>
        <th>Origen</th>
      </tr>
    </thead>
    <tbody>
      <% @user.account_movements.each do |movement| %>
        <tr>
          <td><%= movement.id %></td>
          <td>consignacion</td>
          <td><%= movement.created_at.to_formatted_s(:short) %></td>
          <td><%= number_to_currency movement.value %></td>
          <td><%= movement.origin %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
