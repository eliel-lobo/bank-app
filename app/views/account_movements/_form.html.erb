<%= form_for @account_movement, :html => { :class => "form-horizontal account_movement" } do |f| %>

  <% if @account_movement.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@account_movement.errors.count, "error") %> prohibited this account_movement from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @account_movement.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :account_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :account_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:account_id) %>
  </div>
  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:type) %>
  </div>
  <div class="form-group">
    <%= f.label :origin, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :origin, :class => 'form-control' %>
    </div>
    <%=f.error_span(:origin) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                account_movements_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
